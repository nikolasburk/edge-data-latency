generator client {
  provider      = "prisma-client-js"
  output        = "./prisma-client"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("RESULTS_DATABASE_URL")
}

enum DataService {
  Neon
  PrismaNeon
  PrismaNeonTCP
  DrizzleNeon
  DrizzleNeonTCP
  Supabase
  PrismaSupabaseTCP
  PlanetScale
  PrismaPlanetScale
  PrismaPlanetScaleTCP
  DrizzlePlanetScale
  DrizzlePlanetScaleTCP
}

enum Runtime {
  Edge
  Node
}

enum QueryCount {
  One
  Two
  Five
}

enum Location {
  Regional
  Global
}

model BenchmarkRun {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())

  // Benchmark run params
  dataService DataService
  runtime     Runtime
  location    Location
  queryCount  QueryCount

  // Meta
  route String

  // Result
  queryDuration Int
}
